{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install --include=dev",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/** shared/**"
    },
    "api/bot.ts": {
      "includeFiles": "server/** shared/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/bot",
      "destination": "/api/bot"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

